<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>Happ Software Portal</title>
    <meta name="viewport" content="width=device-width" />
    <link href="/assets/css/animate.min.css" rel="stylesheet"/>
    <link href="/assets/css/light-bootstrap-dashboard.css" rel="stylesheet"/>
    <link href="/assets/css/demo.css" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
    <script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="/bower_components/angular/angular.min.js"></script>
	<script type="text/javascript" src="/bower_components/angular-route/angular-route.min.js"></script>
	<script type="text/javascript" src="/bower_components/angular-smart-table/dist/smart-table.min.js"></script>
	<script src="/bower_components/angular-sanitize/angular-sanitize.min.js"></script>
	<script src="/bower_components/material-angular-paging/build/dist.min.js"></script>
	<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="/bower_components/angular-material/angular-material.css">
	<script src="/js/portal.js" type="text/javascript" ></script>
	<script src="/js/shared.js" type="text/javascript" ></script>
	<script src="/bower_components/highcharts/highcharts.js"></script>
</head>
<body ng-app="app">

<div class="wrapper" ng-controller='appController' ng-init='init(<%-JSON.stringify(entity) %>)'>
    <div class="sidebar" data-color="azure"  >

    	<div class="sidebar-wrapper">
            <div class="logo">
                <a  class="simple-text">
                    {{ entity }}
                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a href="dashboard.html">
                        <i class="pe-7s-graph"></i>
                        <p>Inicio</p>
                    </a>
                </li>
                <li>
                    <a href="user.html">
                        <i class="pe-7s-user"></i>
                        <p>Mensaje</p>
                    </a>
                </li>
                
            </ul>
    	</div>
    </div>

    <div class="main-panel">
        
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Información personal</h4>
                                <p class="category">Datos del cliente</p>
                            </div>
                            <div class="content">
					            <div class="table-responsive">
					            <table class="table table-condensed table-responsive table-user-information">
					                <tbody>
					                    <tr>        
					                        <td>
					                            <strong>
					                                <span class="glyphicon glyphicon-user  text-primary"></span>
					                                Nombre                                                
					                            </strong>
					                        </td>
					                        <td class="text-primary">
					                            {{ clientInfo.name }}     
					                        </td>
					                    </tr>
					                    <tr>    
					                        <td>
					                            <strong>
					                                <span class="glyphicon glyphicon-sort-by-alphabet  text-primary"></span>    
					                                Apellidos                                                
					                            </strong>
					                        </td>
					                        <td class="text-primary">
					                            {{ clientInfo.surname }}     
					                        </td>
					                    </tr>
					                    <tr>        
					                        <td>
					                            <strong>
					                                <span class="glyphicon glyphicon-star text-primary"></span>  
					                                Tipo                                                
					                            </strong>
					                        </td>
					                        <td class="text-primary">
					                            {{ clientInfo.type }}  
					                        </td>
					                    </tr>

					                    <tr>        
					                        <td>
					                            <strong>
					                                <span class="glyphicon glyphicon-send text-primary"></span> 
					                                Email                                                
					                            </strong>
					                        </td>
					                        <td class="text-primary">
					                            {{ clientInfo.email }} 
					                        </td>
					                    </tr>
					                    <tr>        
					                        <td>
					                            <strong>
					                                <span class="glyphicon glyphicon-tag text-primary"></span> 
					                                Direccion                                                
					                            </strong>
					                        </td>
					                        <td class="text-primary">
					                            {{ clientInfo.direccion }}
					                        </td>
					                    </tr>                            
					                </tbody>
					            </table>
					            </div>
					        </div>

                                
                            </div>
                        </div>

                    <div class="col-md-8">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Economia temporal</h4>
                                <p class="category">Estado basico de las cuentas</p>
                            </div>
                            <div class="content">
                            <div id="statscontent" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-12">
                        <div class="card ">
                            <div class="header">
                                <h4 class="title">Transacciones</h4>
                                <p class="category">Gestion de todos los gastos</p>
                            </div>
                            <div class="content">
                               <table st-table="rowCollectionTransacction" class="table table-striped" >
							<thead>
							<tr>
								<th>Fecha</th>
								<th>Cantidad</th>
								<th>Tipo</th>
								<th>Descripcion</th>
							</tr>
							</thead>
							<tbody>
							<tr ng-repeat="row in rowCollectionTransacction" ng-class="row.type ==='Ingreso' ? 'esIngreso': 'esGasto'">
								<td>{{row.date | date : "dd.MM.y"}}</td>
								<td >{{row.cant}} €</td>
								<td>{{row.type}}</td>
								<td>{{row.desc}}</td>
							</tr>
							</tbody>
						</table>
					<cl-paging flex style="padding:10px;" cl-pages="pagingTransacction.total" , cl-steps="6" , cl-page-changed="pagingTransacction.onPageChanged()" , cl-align="center center" , cl-current-page="pagingTransacction.current"></cl-paging>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="card ">
                            <div class="header">
                                <h4 class="title">Documentos</h4>
                                <p class="category">Documentos adjuntos (facturas, nominas...)</p>
                            </div>
                            <div class="content">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="#">
                                Happ Software
                            </a>
                        </li>
                    </ul>
                </nav>
                <p class="copyright pull-right">
                    &copy; 2016 Jesús Juan Aguilar
                </p>
            </div>
        </footer>
    </div>
</div>


</body>
    <script src="/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
	<script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>
	<script src="/assets/js/bootstrap-checkbox-radio-switch.js"></script>
	<script src="/assets/js/chartist.min.js"></script>
    <script src="/assets/js/bootstrap-notify.js"></script>
	<script src="/assets/js/light-bootstrap-dashboard.js"></script>
	<script src="/assets/js/demo.js"></script>
</html>
